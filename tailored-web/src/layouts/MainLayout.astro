---
import Navigation from '@/components/Navigation.astro';
import { ViewTransitions } from 'astro:transitions';
import '@styles/main.css';

const { title = 'My Portfolio', description = 'My portfolio created with Astro, and TailwindCSS' } =
	Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Germania+One&display=swap" rel="stylesheet" />
		<link
			href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Germania+One&display=swap"
			rel="stylesheet"
		/>
		<link rel="icon" type="image/svg+xml" href="logos/tw-logo-green.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Navigation />
		<main>
			<slot />
		</main>
	</body>
</html>
